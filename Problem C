#include <bits/stdc++.h>
#define N 1000000007;
using namespace std;
int main()
{
 ios::sync_with_stdio(0);cin.tie(0);cout.tie(0);
 cout.precision(30);
 int t;
 cin>>t;
 while(t--)
 {
     int n;
     cin>>n;
     if ((n/2)%2!=0)
        cout<<"NO"<<endl;
     else
     {
        cout<<"YES"<<endl;
        for(int i=1;i<=n/2;i++)
            cout<<2*i<<" ";
        for(int i=1;i<n/2;i++)
            cout<<2*i-1<<" ";
        cout<<2*n/2+(n/2-1)<<endl;
     }
 }

 return(0);
}
